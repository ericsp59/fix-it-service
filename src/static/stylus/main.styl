@import "libs.styl"
@import "fonts.styl"
@import "vars.styl"
@import "media.styl"

header
    nav 
        img
            max-width 150px

body

    i
        vertical-align: middle;
        margin-right 10px
    li
        list-style: none
    //width: 99%;
    h1,h2,h3,h4
        font-family "PollywogCyr"
        letter-spacing 0.1em

    h1
        font-size 48px
        font-weight 900

    p,a
        font-size 2hw
        //font-size: 48px
    button:focus, .btn:focus      
        outline none
        box-shadow 0 0 0 3px #fff, 0 0 0 6px sushi

    a
        text-decoration: none

    a:hover, a:focus
        outline none
        color sushi

    background-color: gallery
    //color shark
    background-position: top center
    background-repeat no-repeat  

    margin: 0
    padding: 0
    text-transform: uppercase
    font-family: "PT Sans Narrow"
    //font-family: "GentiumPlus"

.accent
    color: sushi
    font-size: 27px

.row
    width 100%
    margin 0       

.visually-hidden
    position absolute
    width 1px
    height 1px
    margin -1px
    border 0
    padding 0
    clip rect(0 0 0 0)
    overflow hidden
    
.wide
    padding-right 0px
    padding-left 0px
.hight
    margin-top: 0px
    margin-bottom 0px    

.dark
    background-color shark
    color gallery

.bright
    background-color gallery
    color shark
nav.navbar.navbar-inverse
    position: fixed;
    width: 100%;
    top: 0;
    z-index 10


.main-header
    .header-nav
        &__menu
            .navbar-brand
                padding 0

        &__contacts
            p
                margin 0    


/////////////main/////////////////////////

main.container-fluid
    margin-top: 50px!important;
    .features
        background-image url("/static/img/background1.png")
        background-repeat no-repeat
        background-size: cover
        &__slick-slider
            padding: 0
            //
        &__wrapper
            font-weight 900
            padding-top: 8%
            margin-left 5%
            width 60%
            h1
                margin-bottom 5%
                color shark
            p
                margin-bottom 3%
                height auto
                //font-size 2vw

            button
                margin-bottom 10%
                border-radius 30px
                height 50px    

    .devices
        min-height: 200px
        //height 15vh
        background-color #F4F4F4
        &__slider
            list-style: none
            text-align center
            //border: 1px solid red
            padding 0
            margin 0

        &__slider-item
            height 100%
            margin 40px
            //border: 1px solid red
            display: inline-block
            p
                color dusty-gray
                //font-size: 16px
            img 
                height: 80px
                      


    .about
        //max-height 600px
        padding-top: 3%
        &__text
            padding-top: 8%
            padding-left 5%
            padding-bottom 5%
            float: left
            box-sizing: border-box
        &__image
            padding-top: 5%
            padding-bottom 5%
            text-align center
            img
                display inline
                width 50%
                margin 0 auto




    .why-we
        padding-top: 8%
        padding-bottom: 3%
        background-image url("/static/img/background6-1.png")
        background-repeat no-repeat
        background-size: cover
        //
        &__wrapper
            //padding-top: 3%
            margin-left 50%
            h1
                margin-right 3%
                margin-bottom 8%


        &__list
            width 70%
            float left
            li
                margin-bottom 8%
        i
            color sushi
        b
            color shark               

    .can-repair
        padding: 40px 0px
        text-align center
        h1
            margin-bottom 5%
        a
            color gallery
            text-decoration: none;
        p
            color soft-gray
            //    
        &__list
            margin 0 auto
            padding: 0
            //  
        &__item
            border 1px solid soft-gray
            border-radius: 20px
            &:hover, &:focus
                box-shadow: 0px 8px 20px rgba(255,255,255,.5);
            margin-bottom 20px
            margin-right 20px
            margin-left 20px
            padding: 10px
            vertical-align: top;
            //    

    .business
        background: url('/static/img/background8.png')no-repeat 0 0
        background-size: cover
        background-color: gallery 
        height auto
        &__wrapper
            margin 0 auto
            width: 50%
            padding-top 10px
            padding-bottom 30px
            h1
                color shark
                padding-bottom: 40px
            p
                color shark    
                padding-bottom: 20px

        
///////////end main///////////////////

